import sqlite3

db_path = 'TO BE FILLED IN'
conn = sqlite3.connect(db_path)

db = conn.cursor()

#number of open positions in Germany

def number_open_positions(db):
    query = """
        SELECT COUNT(*)
        FROM hashId
    """
    db.execute(query)
    count = db.fetchone()
    return count[0]
